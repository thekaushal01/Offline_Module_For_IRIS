# Raspberry Pi 5 Configuration
# Voice-Activated Object Detector

# ========================================
# Wake Word Settings
# ========================================
WAKE_WORD=iris
WAKE_WORD_THRESHOLD=0.6

# ========================================
# Whisper Settings (Speech Recognition)
# ========================================
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# ========================================
# YOLO Settings (Object Detection)
# ========================================
YOLO_MODEL=models/yolo11n.pt
YOLO_CONFIDENCE=0.5

# ========================================
# Camera Settings
# ========================================
# Camera type: 'picamera' for Raspberry Pi Camera, 'usb' for USB webcam
CAMERA_TYPE=picamera
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# ========================================
# Text-to-Speech Settings
# ========================================
TTS_ENGINE=pyttsx3
TTS_RATE=150
TTS_VOLUME=1.0

# ========================================
# Audio Settings
# ========================================
SAMPLE_RATE=16000

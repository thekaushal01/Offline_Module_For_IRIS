# Raspberry Pi 5 Configuration
# Voice-Activated Object Detector

# ========================================
# Wake Word Settings
# ========================================
WAKE_WORD=iris
WAKE_WORD_THRESHOLD=0.6

# ========================================
# Whisper Settings (Speech Recognition)
# ========================================
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# ========================================
# YOLO Settings (Object Detection)
# ========================================
YOLO_MODEL=models/yolo11n.pt
YOLO_CONFIDENCE=0.5

# ========================================
# Camera Settings
# ========================================
# Camera type: 'picamera' for Raspberry Pi Camera, 'usb' for USB webcam
CAMERA_TYPE=picamera
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# ========================================
# Text-to-Speech Settings
# ========================================
TTS_ENGINE=pyttsx3
TTS_RATE=150
TTS_VOLUME=1.0

# ========================================
# Audio Settings
# ========================================
SAMPLE_RATE=16000

# ========================================
# Sensor Settings (Visual Assistance)
# ========================================
# HC-SR04 Ultrasonic Sensor
ULTRASONIC_ENABLED=true
ULTRASONIC_TRIG_PIN=23
ULTRASONIC_ECHO_PIN=24
ULTRASONIC_ANNOUNCE_THRESHOLD=6.0

# MPU9250 Fall Detection
FALL_DETECTION_ENABLED=true
MPU9250_ADDRESS=0x68
FALL_IMPACT_THRESHOLD=2.5
FALL_ROTATION_THRESHOLD=150

# Event System (for app/SMTP integration)
EVENT_FILE=/tmp/iris_events.jsonl
